{
  "name": "twreporter-react-article-components",
  "version": "0.0.1",
  "description": "Article Components for Rendering Article Page of The Reporter Site in Taiwan",
  "scripts": {
    "clean": "../../../node_modules/.bin/rimraf lib",
    "build": "npm run clean && npm run build:js && npm run build:css",
    "build:js": "WEBPACK_CONFIG=$(pwd)/webpack.config.js BABEL_DISABLE_CACHE=1 BABEL_ENV=production NODE_ENV=production ../../../node_modules/.bin/babel --out-dir='lib' --ignore='./webpack.config.js' .",
    "build:css": "node ./concatCssFiles $(pwd) && ../../../node_modules/.bin/rimraf lib-css",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/twreporter/twreporter-react"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/twreporter/twreporter-react/issues"
  }
}
