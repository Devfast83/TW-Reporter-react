{
  "apps" : [{
    "name"        : "server",
    "script"      : "bin/server.js",
    "max_memory_restart": "1500M",
    "merge_logs"  : true,
    "out_file"    : "pm2-server-out.log",
    "error_file"  : "pm2-server-err.log",
    "env"         : {
      "NODE_PATH": "./server",
      "NODE_ENV": "production",
      "PORT": 3000,
      "API_HOST": "staging-go-api.twreporter.org",
      "API_PORT": "443",
      "API_PROTOCOL": "https"
    },
    "node_args": "--max_old_space_size=2048"
  }]
}
