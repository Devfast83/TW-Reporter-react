{
  "apps" : [{
    "name"        : "server",
    "script"      : "bin/server.js",
    "max_memory_restart": "4G",
    "env"         : {
      "NODE_PATH": "./server",
      "NODE_ENV": "production",
      "PORT": 3000,
      "APIHOST": "localhost",
      "APIPORT": 3030,
      "APIPROTOCOL": "http",
      "REDIS_ENABLE": true
    },
    "node_args": "--max_old_space_size=5000"
  },{
    "name"        : "api",
    "script"      : "bin/api.js",
    "max_memory_restart": "300M",
    "env"         : {
      "NODE_PATH": "./api",
      "NODE_ENV": "production",
      "PORT": 3000,
      "APIHOST": "localhost",
      "APIPORT": 3030,
      "APIPROTOCOL": "http",
      "REDIS_ENABLE": true
    },
    "node_args": "--max_old_space_size=500"
  }]
}
